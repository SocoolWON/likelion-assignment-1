  <div class="container">
      <h1>New post</h1>
      <div class="row">
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <%= form_for(@post) do |f| %>
              <% if @post.errors.any? %>
                <h3>
                  <% @post.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </h3>
              <% end %>
              <div class="card-content white-text">
                
                <span class="card-title"><%= f.text_field :title, placeholder: "Title" %></span>
                <p><%= f.text_area :content, placeholder: "Write here" %></p>
              </div>
              <div class="card-action">
                <%= f.submit "Submit"%>
              </div>
            <% end %>  
          </div>
        </div>
      </div>
  </div>

